@using Bike2Ride.WebClient.ViewModels.Abstraction
@model  BaseViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type"
          content="text/html" ;
          charset="utf-8" />
    <meta name="viewport"
          content="width=device-width" ,
          initial-scale="1.0">
    <title>Bike2Ride</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scriptstop", required: false)
</head>
<body>
    <div class="navbar-fixed">
        <nav class="white" role="navigation">
            <a href="#"
               data-activates="nav-mobile"
               class="button-collapse">
                <i class="material-icons">menu</i>
            </a>
            <div class="nav-wrapper container">
                @if (@Model != null)
                {
                    <div class="brand-logo center">
                        @Model.Title
                    </div>
                }

                <ul class="left hide-on-med-and-down">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="right hide-on-med-and-down">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </div>
    <ul id="nav-mobile" class="side-nav">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        <li><div class="divider"></div></li>
        @Html.Partial("_LoginPartial")
    </ul>
    @RenderBody()
    <footer class="page-footer teal">
        <div class="footer-copyright">
            <div class="container">
                &copy; @DateTime.Now.Year - <a class="brown-text text-lighten-3"
                                               href="https://github.com/ludzhev/Bike2Ride.WebClient">Bike2Ride</a>.
                Made by <a class="brown-text text-lighten-3"
                           href="https://github.com/ludzhev">ludzhev</a>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
</body>
</html>
